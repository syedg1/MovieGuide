<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="background">@color/background</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomToolbarStyle" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/background</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/background</item>
        <item name="android:radioButtonStyle">@color/colorAccent</item>
        <item name="android:listChoiceIndicatorSingle">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


</resources>